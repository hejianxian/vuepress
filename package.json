{
  "private": true,
  "description": "Minimalistic doc generator with Vue component based layout system",
  "scripts": {
    "lerna:bootstrap": "npm install && lerna bootstrap --hoist --strict -- --no-package-lock",
    "lerna:packages": "lerna ls -l",
    "lerna:changed": "lerna changed",
    "lerna:diff": "lerna diff",
    "lerna:clean": "lerna clean && rm -rf node_modules",
    "dev": "npm run docs:dev",
    "docs:dev": "cd ./packages/docs && npm run dev",
    "build": "npm run docs:build",
    "docs:build": "lerna run --scope docs build",
    "docs:view-info": "lerna run --scope docs view-info",
    "docs:show-help": "lerna run --scope docs show-help",
    "vuepress:link": "lerna exec --scope vuepress -- npm run link",
    "lint": "eslint packages --fix --ext .js,.vue",
    "release": "npm ci && node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "remote-version": "node scripts/remote-version.js",
    "test": "node scripts/test.js",
    "boot": "node scripts/bootstrap.js",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.0.21",
    "eslint": "^4.19.1",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-vue-libs": "^3.0.0",
    "husky": "^3.0.2",
    "inquirer": "^6.2.0",
    "lerna": "3.16.4",
    "lint-staged": "^8.1.5",
    "minimist": "^1.2.0",
    "all-contributors-cli": "^6.8.1"
  },
  "dependencies": {
    "@vuepress/core": "^1.0.3",
    "@vuepress/markdown": "^1.0.3",
    "@vuepress/markdown-loader": "^1.0.3",
    "@vuepress/plugin-active-header-links": "^1.0.3",
    "@vuepress/plugin-back-to-top": "^1.0.3",
    "@vuepress/plugin-google-analytics": "^1.0.3",
    "@vuepress/plugin-last-updated": "^1.0.3",
    "@vuepress/plugin-medium-zoom": "^1.0.3",
    "@vuepress/plugin-nprogress": "^1.0.3",
    "@vuepress/plugin-pwa": "^1.0.3",
    "@vuepress/plugin-register-components": "^1.0.3",
    "@vuepress/plugin-search": "^1.0.3",
    "@vuepress/shared-utils": "^1.0.3",
    "@vuepress/test-utils": "^1.0.3",
    "@vuepress/theme-default": "^1.0.3",
    "@vuepress/theme-vue": "^1.0.3",
    "vuepress": "^1.0.3"
  }
}
